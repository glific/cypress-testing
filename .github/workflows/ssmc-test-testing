name: SSMC - Test server Testing

# Controls when the action will run. Triggers the workflow on push or pull request
# schedule cron at 00:00 UTC means 5:30 am IST
# events but only for the main branch
on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  schedule:
    - cron: "0 0 * * *"
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      # selenium setup
      - name: Setup selenium-testing
        run: |
          echo Configure selenium env

      # Run selenium
      - name: selenium run
        run: |
          echo pip install
          
          echo run tests
